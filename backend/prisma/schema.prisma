generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String
  password String

  @@map("Users")
}

model Client {
  id          String        @id @default(cuid())
  name        String
  Appointment Appointment[]

  @@map("Clients")
}

model Appointment {
  id           String   @id @default(cuid())
  clientId     String
  client       Client   @relation(fields: [clientId], references: [id])
  value        Decimal
  installments Int
  createdAt    DateTime @default(now())
  isPaid       Boolean

  @@map("Appointments")
}
